<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create_cart_table" author="ntynguyen">
        <createTable tableName="cart" remarks="cart table">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true" unique="true" foreignKeyName="fk_cart_user" references="public.user(id)"/>
            </column>
            <column name="customer" type="bigint">
                <constraints nullable="false" unique="true" foreignKeyName="fk_cart_customer" references="customer(id)"/>
            </column>
            <column name="recipient_id" type="bigint">
                <constraints nullable="false" unique="true" foreignKeyName="fk_cart_recipient" references="recipient(id)"/>
            </column>
            <column name="buy_date" type="timestamp">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="delivery_date" type="timestamp">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="delivery_hour" type="time">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
